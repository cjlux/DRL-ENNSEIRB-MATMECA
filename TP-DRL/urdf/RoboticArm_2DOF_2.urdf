<?xml version="1.0"?>

<robot name="RobotArm_2DOF">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="red">
    <color rgba="0.8 0 0 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="world" />

  <link name="base_link">
    <visual>
        <origin xyz="0. 0. 0." rpy="0. 0. 0." />
        <geometry>
            <box size="0.3 0.3 0.02" />
        </geometry>
    </visual>
    <collision>
        <origin xyz="0. 0. 0." rpy="0. 0. 0." />
        <geometry>
            <box size="0.3 0.3 0.02" />
        </geometry>
    </collision>
    <inertial>
        <origin xyz="0. 0. 0." rpy="0. 0. 0." />
        <inertia ixx="5.2e-03" izz="1.5e-02" iyy="5.2e-03" iyz="0.0" ixz="0.0" ixy="0.0" />
        <mass value="5.0" />
    </inertial>
  </link>
  <joint name="fixed_to_world" type="fixed">
    <parent link="world"/>
    <child  link="base_link"/>
    <origin xyz="0. 0. 0.01"/>
  </joint>
  
  <link name="Arm_1">
    <visual>
        <origin xyz="0.5 0. 0." rpy="0. 0. 0." />
        <geometry>
            <box size="1. 0.03 0.02" />
        </geometry>
        <material name="blue" />
    </visual>
    <inertial>
        <origin xyz="0.5 0. 0." rpy="0. 0. 0." />
        <inertia ixx="1.083e-04" iyy="5.561e-02" izz="1.250e-01"  ixz="0.0" ixy="0.0" iyz="0.0" />
        <mass value="1.0" />
    </inertial>
    <collision>
        <origin xyz="0.5 0. 0." rpy="0. 0. 0." />
        <geometry>
            <box size="1. 0.03 0.02" />
        </geometry>
    </collision>
  </link>
  <joint type="revolute" name="Revolute1">
    <axis xyz="0 0 1" />
    <limit lower="0." upper="3.1416" effort="5000"  velocity="6" />
    <parent link="base_link" />
    <child  link="Arm_1" />
    <origin xyz="0. 0. 0.01" rpy="1.5707963267948966 0. 0." />
  </joint>
   
  <link name="Arm_2">
    <visual>
        <origin xyz="0.5 0. 0." rpy="0. 0. 0." />
        <geometry>
            <box size="1. 0.03 0.02" />
        </geometry>
        <material name="red" />
    </visual>
    <inertial>
        <origin xyz="0.5 0. 0." rpy="0. 0. 0."/>
        <inertia ixx="1.083e-04" iyy="5.561e-02" izz="1.250e-01"  ixz="0.0" ixy="0.0" iyz="0.0" />
        <mass value="1.0" />
    </inertial>
    <collision>
        <origin xyz="0.5 0. 0." rpy="0. 0. 0." />
        <geometry>
            <box size="1. 0.03 0.02" />
        </geometry>
    </collision>
  </link>
  <joint type="revolute" name="Revolute2">
    <axis xyz="0 0 1" />
    <limit lower="-3.1416" upper="3.1416" effort="5000"  velocity="6" />
    <parent link="Arm_1" />
    <child link="Arm_2" />
    <origin xyz="1. 0. 0." rpy="0. 0. 0." />
  </joint>

  <link name="effector">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="white" />
    </visual>
     <inertial>
        <origin xyz="0. 0. 0." rpy="0. 0. 0." />
        <inertia ixx="1.e-7" izz="1.e-7" iyy="1.e-7" ixz="0." ixy="0." iyz="0." />
        <mass value="0.001" />
    </inertial>
  </link>
  <joint type="fixed" name="fixed" >
    <parent link="Arm_2"/>
    <child link="effector"/>
    <origin xyz="1. 0. 0."/>
  </joint>

</robot>
